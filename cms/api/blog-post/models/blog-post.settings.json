{
  "kind": "collectionType",
  "collectionName": "blog_posts",
  "info": {
    "name": "blogPost"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "unique": true,
      "required": true
    },
    "description": {
      "type": "text"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "draft",
        "published",
        "archived"
      ],
      "default": "draft"
    },
    "body": {
      "type": "richtext"
    }
  }
}
